{
  "name": "Monacode Extension for Gmail",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Burda Hackday 2016! Team MONACODE! Let's rock and roll! :)",
  "homepage_url": "https://github.com/felixeichler/hackday-monacode-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://mail.google.com/*",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": [
        "css/normalize.css",
        "css/webflow.css",
        "css/xingtellingent.webflow.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/angular/angular.min.js",
        "src/inject/content.js",
        "src/inject/inject.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "src/background/csp.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": ["templates/monacode.html",
    "templates/monacode-user.html",
    "templates/monacode-networks.html",
  "templates/*.html"]
}
